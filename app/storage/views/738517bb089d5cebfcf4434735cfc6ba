

<?php $__env->startSection('title', 'Admin Dashboard'); ?>

<?php $__env->startSection('content'); ?>
<?php
use Carbon\Carbon;
$hotel = Hotel::where('user_id', Sentry::getUser()->id)->first();
$planes = Plan::where('state', 1)->orderBy('price', 'ASC')->get();
$itemsCount = Item::where('hotel_id', $hotel->id)->where('state', 1)->count();
$langCount = Room::where('hotel_id', $hotel->id)->where('state', 1)->count();

$payment = Payment::where('user_id', $hotel->user_id)->first();
$create =  Carbon::parse($payment->updated_at);
$caducidad = $create->addDays($payment->time);
$date = new DateTime($caducidad);
?>
<!--
/////////////////////////////////////////////////////////////////////////
//////////     Planes de pago de menbrecias     //////////
//////////////////////////////////////////////////////////////////////
-->
<div id="main">

	<div id="content">
		<div class="row pricing">
			<div class="col-lg-12">
				<section class="panel">
					<header class="panel-heading  align-lg-center">
						<h2><strong><?php echo trans('main.plans'); ?></strong></h2>
						<label class="color" ><?php echo trans('main.his latest plan ends the'); ?>: <?php echo $date->format('d-m-Y'); ?></label>
					    </br>
					    <?php if(Session::has('error')): ?>
                            <label class="label label-danger"><?php echo Session::get('error'); ?></label>
                        <?php endif; ?>
					</header>
				</section>
			</div>
			<br>
			<?php foreach($planes as $plan): ?>
			<?php if($itemsCount < $plan->items and $langCount < $plan->rooms): ?>
			<div class="col-lg-4 col-md-4 col-xs-6">
				<ul class="plan corner-flip flip-gray">
					<li class="plan-name"> <?php echo $plan->name; ?> </li>
					<li class="plan-price">â‚¬ <?php echo $plan->price; ?> </li>
					<li> <strong><?php echo $plan->items; ?></strong> <?php echo trans('main.items'); ?> </li>
					<li> <strong><?php echo $plan->rooms; ?></strong> <?php echo trans('main.rooms'); ?> </li>
					<li> <strong><?php echo $plan->time; ?></strong> <?php echo trans('main.days'); ?>  </li>
					<li class="plan-action">
					    <?php echo Form::open(array('method'=>'post', 'action' => 'PaymentsController@postPayment')); ?>

			            <?php echo Form::hidden("plan_id", $plan->id); ?>

					    <button type="submit" data-toggle="tooltip" data-placement="left" title="<?php echo trans('main.to pay'); ?>"  class="btn btn-theme-inverse"><?php echo trans('main.to pay'); ?></button>
					    <?php echo Form::close(); ?> 
				    </li>
				</ul>
			</div>
			<?php endif; ?>
			<?php endforeach; ?>

			<div class="clearfix"></div>
		</div>
		<!-- //content > row-->
	</div>
	<!-- //content-->
</div>
<!-- //main-->

<?php $__env->stopSection(); ?>
