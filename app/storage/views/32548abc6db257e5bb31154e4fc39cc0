<script type="text/javascript">
	function ll (id,num) {
		$('#'+id).ready(function() {
			var elem = 'elem_'+num;
			var a = store.get(elem); 
			if(store.get(elem)==null || store.get(elem) ===undefined){
				$('#'+id).text('0');
			}else{
				var item = store.get(elem);
				$('#'+id).text(item.count);
			}
		});
	}
	shopcar.setItemHorario('<?php echo $item->item_id; ?>','<?php echo $hotel->id; ?>');
</script>
